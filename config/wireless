
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'pci0000:00/0000:00:03.0'
	option diversity '1'
	option distance '1000'
	option disabled '0'
	option country 'DE'
	option channel '10'

config wifi-iface 'radio0_iface'
	option device 'radio0'
	option encryption 'none'
	option mode 'adhoc'
	option bgscan '0'
	option sw_merge '1'
	option mcast_rate '5500'
	option probereq '1'
	option network 'wireless0'
	option ssid 'olsr.freifunk.net'
	option bssid '02:CA:FF:EE:BA:BE'

